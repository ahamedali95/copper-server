{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/main/jobPortal/custom.d.ts"
    ]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
